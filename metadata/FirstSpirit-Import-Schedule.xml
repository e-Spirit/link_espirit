<?xml version="1.0" encoding="UTF-8"?>
<jobs xmlns="http://www.demandware.com/xml/impex/jobs/2015-07-01">
    <job job-id="FirstSpirit-Import" priority="0">
        <description>Imports the content assets and slot configurations generated by FirstSpirit.</description>
        <split sequential="false">
            <flow>
                <context site-id="SiteGenesisGlobal"/>
                <step step-id="ImportLibrary" type="custom.FirstSpirit.ImportLibrary" enforce-restart="false">
                    <description>Import the content assets generated by FirstSpirit.</description>
                    <parameters>
                        <parameter name="ImportFile">/firstspirit/SiteGenesisGlobal/fs_import_library.xml</parameter>
                        <parameter name="ImportMode">MERGE</parameter>
                    </parameters>
                </step>
            </flow>
            <flow>
                <context site-id="SiteGenesisGlobal"/>
                <step step-id="ImportSlotConfigurations" type="custom.FirstSpirit.ImportSlotConfigurations" enforce-restart="false">
                    <description>Import the slot configurations generated by FirstSpirit.</description>
                    <parameters>
                        <parameter name="ImportFile">/firstspirit/SiteGenesisGlobal/fs_import_slot_configuration.xml</parameter>
                        <parameter name="ImportMode">MERGE</parameter>
                    </parameters>
                </step>
            </flow>
        </split>
        <rules/>
        <triggers>
            <run-once enabled="false">
                <date>2017-01-30Z</date>
                <time>12:18:46.000Z</time>
                <rules>
                    <on-exit status="ERROR">
                        <disable-trigger/>
                    </on-exit>
                </rules>
            </run-once>
        </triggers>
    </job>
</jobs>
